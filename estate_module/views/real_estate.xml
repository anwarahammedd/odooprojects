<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    search-->
    <record id="Real_Search_View" model="ir.ui.view">
        <field name="name">Real Estate Search</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <search string="Real Estate Search">
                <group expand="1" string="Group by..">
                    <filter name="filter_0" string="Name" domain="[]" context="{'group_by':'name'}"/>
                    <filter string="Available" name="Available" domain="[('status2','!=','new')]"/>
                </group>
                <group expand="1" string="Group by..">
                    <filter name="name" string="postcode" domain="[]" context="{'group_by':'postcode'}"/>
                </group>
                <group>
                    <field name="living_area"
                           filter_domain="[('living_area','>=',self)]"/>
                </group>
            </search>
        </field>
    </record>
    <!--    form-->
    <record id="estate_form" model="ir.ui.view">
        <field name="name">Real Estate</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <field name="status2" widget="statusbar" style="position:right"/>
                        <button name="property_sold" string="SOLD" type="object" class="oe_highlight"
                                attrs="{'invisible':[('status2','=','new')]}"/>
                        <button name="property_cancelled" string="CANCEL" type="object" class="oe_highlight"
                                attrs="{'invisible':[('status2','=','sold')]}"/>
                    </header>
                    <group>
                        <h1>
                            <field name="property_type" class="oe_inline" readonly="True"/>
                            <heading> in </heading>
                            <field name="place" class="oe_inline" readonly="True"/>
                        </h1>
                    </group>
                    <group>
                        <field name="status"/>
                        <field name="properties" widget="many2many_tags" nolabel="1"/>
                        <field name="name"/>
                        <field name="property_type"/>
                        <field name="place"/>
                        <field name="active"/>
                        <field name="postcode"/>
                        <field name="expected_price"/>
                        <field name="best_offer"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="date_availability"/>
                                <field name="selling_price"/>
                                <field name="bedrooms"/>
                                <field name="description"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="living_area"/>
                                <field name="total_area"/>
                                <field name="garden_orientation"/>
                                <field name="last_seen"/>
                            </group>
                        </page>
                        <page string="Details of Buyer and Seller">
                            <group>
                                <field name="buyer_name"/>
                                <field name="sales_person"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="status_offer">
                                <tree editable="bottom">
                                    <field name="create_date"/>
                                    <field name="partner"/>
                                    <field name="new_price"/>
                                    <field name="status1"/>
                                    <!--                                        fa-times-->
                                    <!--                                        fa-check-->
                                    <field name="accept" attrs="{'invisible':[('refused','=',True)]}"/>
                                    <field name="refused" attrs="{'invisible':[('accept','=',True)]}"/>
                                    <field name="dead_line"/>
                                    <field name="validity"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--    tree-->
    <record id="estate_tree" model="ir.ui.view">
        <field name="name">Estate Tree</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <tree decoration-success="status2=='offer_accepted'" decoration-primary="status2=='offer_received'"
                  decoration-info="status2=='sold'" decoration-bf="status2=='offer_accepted'">
                <field name="name"/>
                <field name="status2"/>
                <field name="property_type"/>
                <field name="description"/>
                <field name="place"/>
                <field name="date_availability"/>
                <field name="postcode"/>
                <field name="status2"/>
            </tree>
        </field>
    </record>
    <record id="est_kanban" model="ir.ui.view">
        <field name="name">Estate Kanban</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click" style="color:indigo">
                            <H1>
                                <field name="name"/>
                            </H1>
                            <group>
                                <field name="expected_price"/>
                                <field name="properties"/>
                            </group>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!--    action-->
    <record id="estate_actions" model="ir.actions.act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">real.estate</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>
    <!--    menu-->
    <menuitem id="real_estate_menu_actions" action="estate_actions"/>
</odoo>