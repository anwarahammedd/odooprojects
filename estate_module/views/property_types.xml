<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    form-->
    <record id="property_type_form" model="ir.ui.view">
        <field name="name">Property Type Form</field>
        <field name="model">property.type.types</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="property_type_tree" model="ir.ui.view">
        <field name="name">Property Type</field>
        <field name="model">property.type.types</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sequence" widget="handle"/>
            </tree>
        </field>
    </record>
    <!--    action-->
    <record id="property_type_action" model="ir.actions.act_window">
        <field name="name">Property Type</field>
        <field name="res_model">property.type.types</field>
    </record>
    <!--    menu-->
    <menuitem id="property_types_menu" name="Property Types" action="property_type_action"
              parent="real_estate_menu_actions"/>
</odoo>